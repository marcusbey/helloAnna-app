# ===========================================
# ANNA AI ASSISTANT - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# API Configuration
EXPO_PUBLIC_RORK_API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Development Settings
NODE_ENV=development
EXPO_USE_HERMES=false
EXPO_USE_FAST_RESOLVER=false
FORCE_BUNDLING=true

# App Configuration
EXPO_PUBLIC_APP_NAME=Anna
EXPO_PUBLIC_APP_VERSION=1.0.0

# Clerk Authentication
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Email Integration (optional - for Gmail connection)
EXPO_PUBLIC_GMAIL_CLIENT_ID=your-gmail-client-id
EXPO_PUBLIC_GMAIL_REDIRECT_URI=http://localhost:8081/auth/callback

# AI/OpenAI Configuration (optional - if using OpenAI)
EXPO_PUBLIC_OPENAI_API_KEY=your-openai-api-key
EXPO_PUBLIC_AI_MODEL=gpt-4

# Analytics (optional)
EXPO_PUBLIC_ANALYTICS_ID=your-analytics-id

# Feature Flags
EXPO_PUBLIC_ENABLE_VOICE=true
EXPO_PUBLIC_ENABLE_GMAIL=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_DEBUG=true

# Subscription/Payment (optional - if using Stripe)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# Supabase Database
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Security (Clerk handles JWT, but you might need these for other purposes)
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
WEBHOOK_SECRET=your-clerk-webhook-secret

# External Services (optional)
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
